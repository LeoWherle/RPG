#include <SFML/System.h>
#include <stdbool.h>
#include "item.h"
#include "room.h"
#include "entities.h"
#include "errorhandling.h"
#include "gui.h"
#include "menu_values.h"

bool exit_ecs(sfEvent *event)
{
    if (event->type == sfEvtClosed)
        return true;
    return false;
}

int main(int ac, UNUSED char **av)
{
    window_t *window = NULL;
    item_t *item = NULL;

    if (ac != 1)
        return 84;
    window = window_create((sfVideoMode){1920, 1080, 32}, 60,
            "Into the abyss", (sfFloatRect){0, 0, 1000, 1000});
    ASSERT_POINTER(window, 84);

    gui_t *gui = gui_create((sfVector2f){0, -0.48}, "assets/menu/options.png");
    item = item_create(item, gui, gui_destroy);
    ASSERT_MALLOC(item, 84);
    item_set_func(item, NULL, NULL, gui_draw);

    gui_t *sub_back = gui_sub_create((sfVector2f){-0.26, -0.47}, "assets/menu/health_e.png", gui);
    sfRectangleShape_setScale(sub_back->shape, (sfVector2f){0.7, 0.7});
    ASSERT_POINTER(sub_back, 84);

    gui_t *sub = gui_sub_create((sfVector2f){-0.26, -0.47}, "assets/menu/health_f.png", gui);
    sfIntRect rect = sfRectangleShape_getTextureRect(sub->shape);
    float var[1] = {1};
    rect.width *= (*var);
    sfRectangleShape_setScale(sub->shape, (sfVector2f){(*var)*0.7, 0.7});
    sfRectangleShape_setTextureRect(sub->shape, rect);
    ASSERT_POINTER(sub, 84);

    item = item_create(item, create_player(window), destroy_player);
    ASSERT_MALLOC(item, 84);
    item_set_func(item, player_update, NULL, player_print);

    item = item_create(item, init_map(), free_map);
    ASSERT_MALLOC(item, 84);
    item_set_func(item, NULL, NULL, draw_room);


    item_loop(item, window, exit_ecs);
    item_list_destroy(item);
    window_destroy(window);
    return 0;
}
